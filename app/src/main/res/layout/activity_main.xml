<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yosef.finalproject.MainActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="1dp"
        android:background="#259DCB"
        android:layout_height="match_parent"
        android:weightSum="1"

        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/four_kings"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/UserName"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/userName"
            android:inputType="text"
            android:layout_margin="8dp"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/password"
            android:inputType="text"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />

        <Button
            android:background="@drawable/button"
            android:onClick="logIn"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/logIn"
            android:id="@+id/logInBtn"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/Background"
            android:layout_alignEnd="@+id/Background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="17dp" />

        <Button
            android:background="@drawable/button"
            android:onClick="SignUp"
            android:layout_margin="5dp"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/signUp"
            android:id="@+id/SignUpBtn"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="221dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:src="@drawable/faceboock_login"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_marginTop="15dp" />


    </LinearLayout>

</RelativeLayout>
