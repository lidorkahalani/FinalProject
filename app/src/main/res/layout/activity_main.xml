<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yosef.finalproject.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="1dp"
        android:background="@drawable/background_menu"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_he"
            android:id="@+id/imageView2"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.01" />

        <EditText
            android:layout_weight="0.11"
            android:id="@+id/UserName"
            android:layout_width="246dp"
            android:layout_height="0dp"
            android:minHeight="15dp"
            android:maxHeight="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/userName"
            android:inputType="text"
            android:layout_margin="8dp"
            android:gravity="center"
            android:background="@drawable/edit_text"

            />

        <EditText
            android:layout_weight="0.11"
            android:id="@+id/password"
            android:layout_width="246dp"
            android:layout_height="0dp"
            android:minHeight="15dp"
            android:maxHeight="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/password"
            android:inputType="text"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />

        <Button
            android:layout_weight="0.12"
            android:layout_height="5dp"
            android:layout_width="175dp"
            android:background="@drawable/enter_he"
            android:onClick="logIn"
            android:id="@+id/logInBtn"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/Background"
            android:layout_alignEnd="@+id/Background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="18dp" />

        <Button
            android:layout_weight="0.12"
            android:layout_height="5dp"
            android:layout_width="175dp"
            android:background="@drawable/sing_up_he"
            android:onClick="SignUp"
            android:layout_margin="5dp"


            android:id="@+id/SignUpBtn"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:textSize="18dp" />

        <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facbookLogin"
            android:layout_gravity="center_horizontal"
            facebook:com_facebook_confirm_logout="false"
            facebook:com_facebook_tooltip_mode="never_display"
            android:layout_marginTop="18dp" />

    </LinearLayout>

</RelativeLayout>