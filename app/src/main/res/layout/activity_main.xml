<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/rsz_background_menu_resize">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="1dp"
        android:layout_height="match_parent"
        android:weightSum="1">


        <ImageView
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo_he"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_weight="0.14"
            android:id="@+id/UserName"
            android:layout_width="246dp"
            android:layout_height="0dp"
            android:minHeight="15dp"
            android:maxHeight="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/userName"
            android:inputType="text"
            android:layout_margin="8dp"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />
        <EditText
            android:layout_weight="0.14"
            android:id="@+id/password"
            android:layout_width="246dp"
            android:layout_height="0dp"
            android:minHeight="15dp"
            android:maxHeight="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:hint="@string/password"
            android:inputType="text"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />

        <Button
            android:layout_weight="0.1"
            android:background="@drawable/enter_he"
            android:onClick="logIn"
            android:layout_width="126dp"
            android:layout_height="0dp"
            android:id="@+id/logInBtn"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/Background"
            android:layout_alignEnd="@+id/Background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <Button
            android:layout_weight="0.1"
            android:background="@drawable/sing_up_he"
            android:onClick="SignUp"
            android:layout_margin="5dp"
            android:layout_width="126dp"
            android:layout_height="0dp"
            android:id="@+id/SignUpBtn"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:textSize="18dp" />

        <com.facebook.login.widget.LoginButton
            android:layout_weight="0.1"
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/facbookLogin"
            android:layout_gravity="center_horizontal"
            facebook:com_facebook_confirm_logout="false"
            facebook:com_facebook_tooltip_mode="never_display"
            android:layout_marginTop="18dp" />

    </LinearLayout>

</RelativeLayout>