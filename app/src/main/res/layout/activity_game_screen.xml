<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#259dcb"
    tools:context="com.example.yosef.finalproject.GameScreen">
    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/myPlayerBackground"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listcards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top_layout"
        android:background="@color/red"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/orange"></RelativeLayout>


    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_layout"
        android:background="@color/yellow"></RelativeLayout>

</RelativeLayout>